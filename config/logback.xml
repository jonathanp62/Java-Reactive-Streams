<configuration scan="false" scanPeriod="60 seconds" packagingData="false" debug="false">
  <appender name="MAIN" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} %-5level [%logger] [%M] %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="net.jmp.demo.reactive.streams.ArticleTransformationProcessor" additivity="false" level="info">
    <appender-ref ref="MAIN" />
  </logger>
  <logger name="net.jmp.demo.reactive.streams.flow.ListPublisher" additivity="false" level="info">
    <appender-ref ref="MAIN" />
  </logger>
  <logger name="net.jmp.demo.reactive.streams.flow.ListSubscriber" additivity="false" level="info">
    <appender-ref ref="MAIN" />
  </logger>
  <logger name="net.jmp.demo.reactive.streams.Main" additivity="false" level="info">
    <appender-ref ref="MAIN" />
  </logger>
  <logger name="net.jmp.demo.reactive.streams.StreamPublisher" additivity="false" level="info">
    <appender-ref ref="MAIN" />
  </logger>
  <logger name="net.jmp.demo.reactive.streams.StreamSubscriber" additivity="false" level="info">
    <appender-ref ref="MAIN" />
  </logger>
  <logger name="net.jmp.demo.reactive.streams.SummarySubscriber" additivity="false" level="info">
    <appender-ref ref="MAIN" />
  </logger>

  <root level="info">
    <appender-ref ref="MAIN" />
  </root>
</configuration>
